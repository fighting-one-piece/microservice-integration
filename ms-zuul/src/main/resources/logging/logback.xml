<?xml version="1.0" encoding="UTF-8"?>
<!-- 属性描述 scan：性设置为true时，配置文件如果发生改变，将会被重新加载，默认值为true scanPeriod:设置监测配置文件是否有修改的时间间隔，如果没有给出时间单位，默认单位是毫秒。当scan为true时，此属性生效。默认的时间间隔为1分钟。 
	debug:当此属性设置为true时，将打印出logback内部日志信息，实时查看logback运行状态。默认值为false。 -->
<configuration scan="true" scanPeriod="60 seconds" debug="false">
	<!--定义日志文件的存储地址 勿在 LogBack 的配置中使用相对路径 -->
	<property name="LOG_HOME" value="logs" />
	<property name="MAX_HISTORY" value="30" />
	<property name="PATTERN" value="%date{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread]%logger{56}.%method:%L -%msg%n" />

	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>${PATTERN}</pattern>
		</encoder>
	</appender>

	<appender name="SYS_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<!-- 文件路径 -->
		<rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<!-- 文件名称 -->
			<fileNamePattern>${LOG_HOME}/sys.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
			<!-- 日志文件最大的大小 -->
			<maxFileSize>100MB</maxFileSize>
			<!-- 文件最大保存历史数量 -->
			<maxHistory>${MAX_HISTORY}</maxHistory>
			<!-- 最大不能超过10GB -->
			<totalSizeCap>10GB</totalSizeCap>
		</rollingPolicy>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>${PATTERN}</pattern>
		</layout>
	</appender>
	
	<appender name="DEBUG_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<!-- 文件路径 -->
		<rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<!-- 文件名称 -->
			<fileNamePattern>${LOG_HOME}/sys.%d{yyyy-MM-dd}.%i.d.log</fileNamePattern>
			<!-- 日志文件最大的大小 -->
			<maxFileSize>100MB</maxFileSize>
			<!-- 文件最大保存历史数量 -->
			<maxHistory>${MAX_HISTORY}</maxHistory>
			<!-- 最大不能超过10GB -->
			<totalSizeCap>10GB</totalSizeCap>
		</rollingPolicy>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>${PATTERN}</pattern>
		</layout>
		<!--日志文件最大的大小 -->
		<!--  
		<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<MaxFileSize>10MB</MaxFileSize>
		</triggeringPolicy>
		-->
		<!--过滤 -->
		<filter class="ch.qos.logback.classic.filter.LevelFilter">  
		    <level>DEBUG</level>  
		    <onMatch>ACCEPT</onMatch>  
		    <onMismatch>DENY</onMismatch>  
		</filter>
	</appender>
	
	<appender name="INFO_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<!-- 文件路径 -->
		<rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<!-- 文件名称 -->
			<fileNamePattern>${LOG_HOME}/sys.%d{yyyy-MM-dd}.%i.i.log</fileNamePattern>
			<!-- 日志文件最大的大小 -->
			<maxFileSize>100MB</maxFileSize>
			<!-- 文件最大保存历史数量 -->
			<maxHistory>${MAX_HISTORY}</maxHistory>
			<!-- 最大不能超过10GB -->
			<totalSizeCap>10GB</totalSizeCap>
		</rollingPolicy>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>${PATTERN}</pattern>
		</layout>
		<!--日志文件最大的大小 -->
		<!--  
		<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<MaxFileSize>10MB</MaxFileSize>
		</triggeringPolicy>
		-->
		<!--过滤 -->
		<filter class="ch.qos.logback.classic.filter.LevelFilter">  
		    <level>INFO</level>  
		    <onMatch>ACCEPT</onMatch>  
		    <onMismatch>DENY</onMismatch>  
		</filter>
	</appender>
	
	<appender name="ERROR_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<!-- 文件路径 -->
		<rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<!-- 文件名称 -->
			<fileNamePattern>${LOG_HOME}/sys.%d{yyyy-MM-dd}.%i.e.log</fileNamePattern>
			<!-- 日志文件最大的大小 -->
			<maxFileSize>100MB</maxFileSize>
			<!-- 文件最大保存历史数量 -->
			<maxHistory>${MAX_HISTORY}</maxHistory>
			<!-- 最大不能超过10GB -->
			<totalSizeCap>10GB</totalSizeCap>
		</rollingPolicy>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>${PATTERN}</pattern>
		</layout>
		<!--日志文件最大的大小 -->
		<!--  
		<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<MaxFileSize>10MB</MaxFileSize>
		</triggeringPolicy>
		-->
		<!--过滤 -->
		<filter class="ch.qos.logback.classic.filter.LevelFilter">  
		    <level>ERROR</level>  
		    <onMatch>ACCEPT</onMatch>  
		    <onMismatch>DENY</onMismatch>  
		</filter>
	</appender>

	<springProfile name="development">
		<logger name="org.cisiondata" level="DEBUG">
			<appender-ref ref="CONSOLE" />
			<appender-ref ref="SYS_LOG" />
			<appender-ref ref="DEBUG_LOG" />
			<appender-ref ref="INFO_LOG" />
			<appender-ref ref="ERROR_LOG" />
		</logger>
		<logger name="org.springframework" level="INFO">
			<appender-ref ref="CONSOLE" />
			<appender-ref ref="SYS_LOG" />
		</logger>
		<logger name="java.sql" level="INFO">
	    	<appender-ref ref="CONSOLE" />
	    </logger>
		<logger name="com.ibatis" level="INFO">
	    	<appender-ref ref="CONSOLE" />
	    </logger>
	</springProfile>

	<springProfile name="test">
		<logger name="org.cisiondata" level="INFO" />
		<logger name="org.springframework" level="ERROR" />
	</springProfile>

	<springProfile name="production">
		<logger name="org.cisiondata" level="INFO" />
		<logger name="org.springframework" level="ERROR" />
	</springProfile>

	<!-- 
	<include resource="src/main/resources/logging/logback-${spring.profiles.active}.xml"/> 
	-->

</configuration>  